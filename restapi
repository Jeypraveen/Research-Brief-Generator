# Start API server
python main.py --api --port 8000

# API docs at http://localhost:8000/docs
# Example request:
curl -X POST "http://localhost:8000/brief" \
  -H "Content-Type: application/json" \
  -d '{
    "topic": "Sustainable Agriculture Practices",
    "depth": 3,
    "follow_up": false,
    "user_id": "api_user"
  }'
